{
  "name": "shopuz-monorepo",
  "version": "1.0.0",
  "description": "ShopUz E-Commerce Platform - Monorepo",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ..",
    "build": "cd frontend && npm install && NEXT_PUBLIC_API_URL=/ npm run build && cd ../backend && npm install",
    "start": "cd backend && node simple-server.js",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "keywords": ["ecommerce", "nextjs", "express", "prisma"],
  "author": "Davlatbek",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
